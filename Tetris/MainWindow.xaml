            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="10" Background="black" TextAlignment="Center" VerticalAlignment="center" Foreground="White" FontSize="70" Height="120">TETRIS</TextBlock>


    </Grid>
</Window>
